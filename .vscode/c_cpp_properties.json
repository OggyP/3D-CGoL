{
    "configurations": [
        {
            "name": "linux-gcc-x64",
            "intelliSenseMode": "linux-gcc-x64",
            "includePath": [
                "${workspaceFolder}/**"
            ],
            "defines": [
                "_DEBUG"
            ],
            "cStandard": "${default}",
            "cppStandard": "${default}",
            "forcedInclude": [
                "${workspaceFolder}/src/PCH.hpp"
            ],
            "compilerArgs": [
                "-Wall",
                "-Wextra",
                "-Wpedantic"
            ],
            "compilerPath": "/usr/bin/gcc"
        },
        {
            "name": "Mac",
            "intelliSenseMode": "clang-x64",
            "compilerPath": "/usr/bin/clang",
            "macFrameworkPath": [
                "/Library/Frameworks",
                "/System/Library/Frameworks"
            ],
            "includePath": [
                "${workspaceFolder}/src",
                "${workspaceFolder}/lib",
                "${workspaceFolder}/test",
                "/usr/local/include/**"
            ],
            "defines": [
                "_DEBUG"
            ],
            "cStandard": "c11",
            "cppStandard": "c++17",
            "forcedInclude": [
                "${workspaceFolder}/src/PCH.hpp"
            ]
        },
        {
            "name": "Win32",
            "intelliSenseMode": "gcc-x86",
            "compilerPath": "C:/mingw32/bin/gcc.exe",
            "includePath": [
                "${workspaceFolder}/src",
                "${workspaceFolder}/lib",
                "${workspaceFolder}/test",
                "C:/SFML-2.5.1/include",
                "C:/glm",
                "C:/glew-2.2.0/include"
            ],
            "defines": [
                "_DEBUG",
                "UNICODE",
                "_UNICODE"
            ],
            "cStandard": "c11",
            "cppStandard": "c++17",
            "forcedInclude": [
                "${workspaceFolder}/src/PCH.hpp"
            ]
        }
    ],
    "version": 4
}